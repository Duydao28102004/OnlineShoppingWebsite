<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Quicksand:wght@300;400;500;600;700&display=swap');
        
        body {
            margin: 0;
            padding: 0;
            font-family: "Quicksand", sans-serif;
        }

        /* Apply basic styling to the entire navigation bar */
        .top-nav {
            background-color: #f8f8f8;
            padding: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 80%;
            margin: 0 auto;
        }

        /* Style the heading (h1) */
        .top-nav h1 {
            color: #f1356d;
            margin: 0;
        }

        /* Style the links within the navigation bar */
        .top-nav .links {
            list-style: none;
            display: flex;
            margin: 0;
            padding: 0;
        }

        .top-nav .links a {
            color: black;
            text-decoration: none;
            margin-right: 15px;
        }

        /* Change the link color on hover for better user experience */
        .top-nav .links a:hover {
            color: #ffd700;
        }

        /* Hamburger menu styles */
        .hamburger {
            display: none;
            flex-direction: column;
            cursor: pointer;
        }

        .hamburger div {
            width: 30px;
            height: 3px;
            background: #333;
            margin: 6px 0;
            transition: 0.4s;
        }
        .links li {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .no-decoration {
            text-decoration: none;
        }

        .logout-button {
            background: linear-gradient(to bottom, #ff7f50, #ff6347);
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            border-radius: 5px;
        }


        /* Media query for responsive design */
        @media only screen and (max-width: 768px) {
            .top-nav .links {
                display: none;
                flex-direction: column;
                width: 100%;
                text-align: center;
                position: absolute;
                top: 60px;
                left: 0;
                background-color: #f8f8f8;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
                z-index: 1;
            }
        

            .top-nav .links.show {
                display: flex;
            }

            .li {
                margin: 10px auto;
            }

            .hamburger {
                display: flex;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="top-nav">
            <a class="no-decoration" href="/redirect"><h1>Tikitaka</h1></a>
            <div class="hamburger" onclick="toggleMenu()">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <ul class="links">
                <li><a href="/">Home</a></li>
                <li><a href="/FAQ">About</a></li>
                <li><a href="/contact">Contact</a></li>
                <li>
                    <form action="/logout" method="GET" >
                        <button type="submit" onclick="deleteLocalStorage()" class="logout-button">Logout</button>
                    </form>
                </li>
            </ul>
        </nav>
    </header>

    <script>
        function toggleMenu() {
            var links = document.querySelector('.top-nav .links');
            links.classList.toggle('show');
        }
        function deleteLocalStorage() {
            localStorage.clear();
        }
    </script>
</body>
</html>
