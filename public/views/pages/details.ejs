<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/productdetail.css">
    <title>Document</title>
</head>
<body>
    <%- include('../components/header') %>
    <div class="product-container">
        <img src="data:image/png;base64,<%= product.image %>" alt="<%= product.name %>" class="product-image">
        <div class="product-details">
            <h1><%= product.name %></h1>
            <p>Type: <%= product.type %></p>
            <p>Price: <%= product.price %></p>
            <p>Quantity: <%= product.quantity %></p>
            <p>Rating: <%= product.rating %></p>
            <p>Description: <%= product.description %></p>
            <button onclick="addToBasket('<%= product._id %>', '<%= product.name %>', '<%= product.price %>','data:image/png;base64,<%= product.image %>', 1)">Add this product</button>
            <div id="notification"></div>
        </div>
    </div>
    <%- include('../components/footer') %>
    <script src="/js/productdetail.js"></script>
</body>
</html>